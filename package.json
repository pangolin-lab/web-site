{
  "name": "ppn",
  "version": "1.0.0",
  "description": "Proton WEB",
  "main": "src/index.js",
  "scripts": {
    "clean:all": "rm -rf build",
    "mkdirs": "mkdir -p build/js",
    "browserify:js": "browserify src/App.js -dv -o build/js/index-bundle.js",
    "rebuild":"npm run clean:all && npm run mkdirs && npm run browserify:js",
    "serve": "lite-server -c .configs/bs-config.json",
    "start": "npm run rebuild && npm run serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": "./.configs/shim.js",
  "repository": {
    "type": "git",
    "url": "git@ppn:proton-lab/web-site.git"
  },
  "author": "Proton-team",
  "license": "MIT",
  "devDependencies": {
    "bestzip": "^2.1.4",
    "browserify": "^16.5.0",
    "browserify-shim": "^3.8.14",
    "lite-server": "^2.5.4",
    "shelljs": "^0.8.3"
  },
  "dependencies": {
    "jQuery": "^1.7.4"
  }
}
