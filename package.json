{
  "name": "pangolin-web",
  "version": "1.0.0",
  "description": "Pangolin WEB",
  "main": "src/App.js",
  "scripts": {
    "clean:all": "rm -rf build",
    "mkdirs": "mkdir build",
    "browserify:js": "browserify src/mp-index.js -dv -o build/js/mp-index-bundle.js",
    "watch": "watchify -p browserify-hmr src/mp-index.js -o build/js/mp-index-bundle.js -dv",
    "rebuild": "npm run clean:all && npm run mkdirs && npm run browserify:js",
    "serve": "lite-server -c .config/bs-config.json",
    "start": "npm run rebuild && npm run serve",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": "./.config/shim.js",
  "repository": {
    "type": "git",
    "url": "git@ppn:pangolin-lab/web-site.git"
  },
  "author": "pangolin-lab",
  "license": "MIT",
  "devDependencies": {
    "bestzip": "^2.1.4",
    "browserify": "^16.5.0",
    "browserify-hmr": "^0.3.7",
    "browserify-shim": "^3.8.14",
    "lite-server": "^2.5.4",
    "shelljs": "^0.8.3",
    "watchify": "^3.11.1"
  },
  "dependencies": {
    "jQuery": "^1.7.4",
    "web3": "^1.2.1"
  }
}
